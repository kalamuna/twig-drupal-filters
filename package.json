{
  "name": "twig-drupal-filters",
  "version": "2.0.0",
  "description": "Drupal's Twig filters, implemented for Twig.js",
  "main": "index.js",
  "scripts": {
    "test": "mocha --reporter spec",
    "posttest": "xo --space=2 --no-esnext --no-semicolon --global=it --global=describe"
  },
  "keywords": [
    "Drupal",
    "Twig"
  ],
  "author": "Kalamuna (http://kalamuna.com)",
  "license": "MIT",
  "devDependencies": {
    "mocha": "^6.0.0",
    "xo": "^0.24.0"
  },
  "dependencies": {
    "slugg": "^1.2.1",
    "twig": "^1.12.0"
  },
  "xo": {
    "rules": {
      "unicorn/filename-case": 0
    }
  }
}
